{
  "manifest_version": 2,
  "homepage_url": "https://github.com/siyuan-note/siyuan-chrome",
  "browser_action": {
    "default_title": "SiYuan",
    "default_popup": "options.html"
  },
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js",
        "lib/Readability.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "*://*/*",
    "contextMenus",
    "clipboardRead",
    "clipboardWrite",
    "storage"
  ],
  "name": "SiYuan",
  "options_page": "options.html",
  "description": "Web page content processing for SiYuan.",
  "version": "0.2.1"
}
